@model IEnumerable<Web.Models.Student>
@{
    ViewBag.Title = "Student list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:20px">
    <div class="clearfix">
        <a href="@Url.Action("create","student")" class="btn btn-default">
            <i class="glyphicon glyphicon-plus"></i> Yeni
        </a>
    </div>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>GPA</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Age</td>
                    <td>@(student.GPA ?? 0)</td>
                    <td>
                        <a class="btn btn-xs btn-primary" href="@Url.Action("update", "student", new { id = student.Id })">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a class="btn btn-xs btn-danger" href="@Url.Action("deleteconfirm", "student", new { id = student.Id })">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
