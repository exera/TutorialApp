@model Web.Models.News
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="blog-post">
    <h2 class="blog-post-title">@Model.Title</h2>
    <p class="blog-post-meta">@Model.Date.ToString("MMMM dd, yyyy")</p>
    <img class="img-responsive blog-post-img" src="@Model.Image.Url" alt="@Model.Image.Alt" />
    @Html.Raw(HttpUtility.HtmlDecode(Model.Content))
</div>
